# Environment Configuration for Multi-Agent Academic Advising API
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED: OpenAI API
# =============================================================================
OPENAI_API_KEY=sk-your-openai-api-key

# =============================================================================
# REQUIRED: MongoDB Atlas Connection
# =============================================================================
# Option 1: Full connection URI (recommended for Atlas)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority

# Option 2: Individual components (for local MongoDB)
# MONGODB_HOST=localhost
# MONGODB_PORT=27017
# MONGODB_USERNAME=
# MONGODB_PASSWORD=

# Database name
MONGODB_DATABASE=advising_bot

# =============================================================================
# REQUIRED: Security
# =============================================================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-secret-key-here

# Token expiration in minutes (default: 60)
ACCESS_TOKEN_EXPIRE_MINUTES=60

# =============================================================================
# OPTIONAL: Server Configuration
# =============================================================================
HOST=0.0.0.0
PORT=8000
RELOAD=false

# CORS allowed origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,https://your-frontend.railway.app

# =============================================================================
# OPTIONAL: Logging
# =============================================================================
LOG_LEVEL=INFO

# =============================================================================
# OPTIONAL: Model Configuration
# =============================================================================
# Override default models (see config.py)
# COORDINATOR_MODEL=gpt-4-turbo
# AGENT_MODEL=gpt-4o
